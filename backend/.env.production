# ===== Core Django =====
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=your_50+char_random_string_use_openssl_to_generate
DJANGO_ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com,www.yourdomain.com
DJANGO_SECURE_SSL_REDIRECT=True

# ===== Database =====
DATABASE_URL=postgres://user:password@host:port/dbname

# ===== CORS/CSRF =====
CORS_ALLOWED_ORIGINS=https://yourfrontend.com,https://www.yourfrontend.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# ===== Email =====
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.yourprovider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your@email.com
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ===== JWT =====
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=15
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7
JWT_ROTATE_REFRESH_TOKENS=True
JWT_BLACKLIST_AFTER_ROTATION=True

# ===== Stripe =====
STRIPE_SECRET_KEY=sk_live_your_live_stripe_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===== Other APIs =====
GOOGLE_API_KEY=your_production_google_key